<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Path.RecordJourneyActivity">


    <TextView
        android:id="@+id/journey_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorNavy"
        android:text="Journey Name"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <!-- 나중에 뭐 넣을때 쓸예쩡-->
    <LinearLayout
        android:id="@+id/blank"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/journey_name_tv"
        android:orientation="vertical">

        <TextView
            android:id="@+id/testresult_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="위치 : 테스트값"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:layout_below="@+id/blank">

        <Button
            android:id="@+id/start_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="START"
            android:textSize="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/white"
            android:background="@drawable/red_rounded_button_vivid"
            />

        <Button
            android:id="@+id/stop_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="STOP"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/white"
            android:background="@drawable/blue_rounded_button_vivid"
            />

        <Button
            android:id="@+id/list_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="List of Places"
            android:textSize="15dp"
            android:layout_marginTop="30dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            />

        <Button
            android:id="@+id/map_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ON MAP"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            />


    </LinearLayout>



    <include layout="@layout/bottom_nav"></include>




</RelativeLayout>