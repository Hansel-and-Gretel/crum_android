<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation='vertical'>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="40dp"
        android:paddingTop="60dp">

        <TextView
            android:id="@+id/text_new_journey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="A new Journey awaits!"
            android:textColor="@color/colorNavy"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Name the Journey"
            android:textColor="@color/colorTextNormal"
            android:textSize="18sp"
            android:textStyle="normal"
            android:textAlignment="gravity"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp">

            <EditText
                android:id="@+id/input_journey_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="name"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Category type"
            android:textColor="@color/colorTextNormal"
            android:textSize="18sp"
            android:textStyle="normal"
            android:textAlignment="gravity"/>
        <Spinner
            android:id="@+id/input_journey_type"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:spinnerMode="dropdown"
            android:hint="type"
            style="@style/Widget.AppCompat.Spinner.Underlined"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="with"
            android:textColor="@color/colorTextNormal"
            android:textSize="18sp"
            android:textStyle="normal"
            android:textAlignment="gravity"/>

        <Spinner
            android:id="@+id/input_journey_with"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:spinnerMode="dropdown"
            android:hint="type"
            style="@style/Widget.AppCompat.Spinner.Underlined" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_marginTop="30dp"
            android:text="Track how often?"
            android:textColor="@color/colorTextNormal"
            android:textSize="18sp"
            android:textStyle="normal"
            android:textAlignment="gravity"/>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/input_locate_frequency"
                android:gravity="start|center_vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:hint="10 min"
                android:textAlignment="gravity"
                android:paddingStart="20dp"
                android:textColor="@color/colorTextNormal"
                android:textSize="16sp"
                android:paddingLeft="20dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_current_journey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/blue_rounded_button_vivid"
            android:padding="8dp"
            android:text="Start New Journey"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:onClick="saveJourney"/>


    </LinearLayout>





</LinearLayout>


