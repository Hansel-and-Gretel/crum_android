<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation='vertical'>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="40dp"
            android:paddingTop="60dp">

            <TextView
                android:id="@+id/text_new_journey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:text="Finish Your Journey"
                android:textColor="@color/colorNavy"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Journey Name"
                android:textColor="@color/colorTextNormal"
                android:textSize="12sp"
                android:textStyle="normal"
                android:textAlignment="gravity"/>


            <TextView
                android:id="@+id/input_journey_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text = "name"
                android:textColor="@color/colorTextNormal"
                android:textStyle="italic"
                android:textSize="18sp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Category"
                android:textColor="@color/colorTextNormal"
                android:textSize="12sp"
                android:textStyle="normal"
                android:textAlignment="gravity"/>
            <Spinner
                android:id="@+id/input_journey_type"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:spinnerMode="dropdown"
                android:hint="type"
                style="@style/Widget.AppCompat.Spinner.Underlined"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="With"
                android:textColor="@color/colorTextNormal"
                android:textSize="12sp"
                android:textStyle="normal"
                android:textAlignment="gravity"/>

            <Spinner
                android:id="@+id/input_journey_with"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:spinnerMode="dropdown"
                android:hint="type"
                style="@style/Widget.AppCompat.Spinner.Underlined" />



            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/summary"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="top"
                    android:hint="Summary"
                    android:inputType="textMultiLine" />
            </com.google.android.material.textfield.TextInputLayout>
            <ImageView
                android:id="@+id/journey_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/blue_rounded_button_empty"
                android:scaleType="centerCrop"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_finish_journey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/blue_rounded_button_vivid"
                android:padding="8dp"
                android:text="Finish Your Journey"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:onClick="uploadJourney"/>




        </LinearLayout>


    </ScrollView>




</LinearLayout>


